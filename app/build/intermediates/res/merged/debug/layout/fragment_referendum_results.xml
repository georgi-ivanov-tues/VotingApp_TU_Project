<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.votingapp.fragments.ReferendumResultsFragment"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/referendumResultsÐ¢itle"
        style="@style/text_vote_title"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/referendumResultsYesOption"
        style="@style/text_vote_result_option"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <View
            android:id="@+id/optionYesBar"
            android:layout_width="0dp"
            android:background="@color/referendumYesGreen"
            android:layout_height="15dp" />
        <View
            android:id="@+id/optionYesBarHidden"
            android:layout_width="0dp"
            android:layout_height="15dp" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/referendumResultsNoOption"
        style="@style/text_vote_result_option" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <View
            android:id="@+id/optionNoBar"
            android:layout_width="0dp"
            android:background="@color/referendumNoRed"
            android:layout_height="15dp"/>
        <View
            android:id="@+id/optionNoBarHidden"
            android:layout_width="0dp"
            android:layout_height="15dp" />
    </LinearLayout>


</LinearLayout>

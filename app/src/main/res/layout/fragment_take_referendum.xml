<?xml version="1.0" encoding="utf-8"?>
<GridLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.TakeReferendumFragment"
    android:columnCount="1"
    android:rowCount="3">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/referendumТitle"
        style="@style/text_vote_title"
        android:layout_column="0"
        android:layout_row="0"/>

    <RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/referendum_radio_group"
        android:layout_column="0"
        android:layout_row="1">
        <RadioButton android:id="@+id/radio_yes"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:text="Да"
            android:button="@null"
            style="@style/referendum_yes_button"/>
        <RadioButton android:id="@+id/radio_no"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:text="Не"
            android:button="@null"
            style="@style/referendum_no_button"/>
    </RadioGroup>

    <Button
        android:id="@+id/save_button"
        android:text="Гласувай"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_column="0"
        android:layout_row="2"
        style="@style/activity_login_button"/>
</GridLayout>


